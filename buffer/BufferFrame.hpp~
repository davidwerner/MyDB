#pragma once

#include <inttypes.h>
#include <pthread.h>

#ifndef _BUFFERFRAME_H_
#define _BUFFERFRAME_H_

using namespace std;

class BufferFrame {

private:

	uint64_t pageId;

	pthread_rwlock_t latch = PTHREAD_RWLOCK_INITIALIZER;

	enum state {CLEAN, DIRTY, CREATED};

	void *data;

public:

	BufferFrame(void *data);

	~BufferFrame();

	uint64_t getPageNo();

	pthread_rwlock_t* getLatch();

};
